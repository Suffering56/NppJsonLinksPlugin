{
  "highlightingEnabled": true,                    // включение/отключение подсветки кликабельных ссылок (underline style)
  "soundEnabled": true,                           // включение/отключение некоторого звукового сопровождения
  "jumpToLineDelay": 100,                         // костыльная настройка. если при переходе по ссылке будет выделяться текст, стоит увеличить это значение, значение 0 - отключает костыль
  "mappingDefaultFilePath": "F:/gd_data",         // рабочая директория с json-файлами, которые для которых будет настраиваться маппинг
  
  "mapping": [
    {
      // самый простой пример маппинга. клик по полю battleClass (в файле mobSettings.json) или его значению перенаправляет в файл battleClasses.json на строку с соответствующим кликнутому battleClass-у значению type. 
      "dst": {
        "fileName": "battleClasses.json",
        "word": "type"
      },
      "src": [
        {
          "fileName": "mobSettings.json",
          "word": "battleClass"
        }
      ]
    },
    //=================================================================================================================================================================================================================================================================================
    
    {
      "dst": {
        "fileName": "offers.json",  // в dst использование '*' для fileName запрещено!
        "word": "id<<<offers"       // в конечном файле offers.json может быть несколько полей с именем id, разной вложенности. поэтому используется сивол '<<<' для уточнения его ближайшего родителя. уточнение может быть любой глубины. не обязательно указывать полный путь.
      },
      "src": [
        {
          "fileName": "*.json",     // если файлов с полем offerId несколько (и все это ссылки на offers.json), то можно использовать символ '*', чтобы не заводить несколько одинаковых маппингов с разным src.fileName
          "word": "offerId"
        }
      ]
    },
    //=================================================================================================================================================================================================================================================================================
   
    {
      "dst": {
        "fileName": "rooms.json",
                                    // в dst использование паттернов (* или ?) для word запрещено!
        "word": "id<<<ROOT"         // иногда требуется уточнение для поля, но у него нет родителя (лежит в корне). для обозначения того, что поле id должно лежать в корне используется зарезервированное слово 'ROOT"
      },
      "src": [
        {
          "fileName": "*.json",
          "word": "roomId<<<extension<<<*restriction?"  // для источника (src) можно использовать паттерны: символы * или ?. Они заменяют любые цифры,буквы и символ '_'. Отличаются они тем что * - заменяет любое количество символов (0-бесконечность), а ? - ноль или один
                                                        // PS: к регистру паттерны не чувствительны.
                                                        // PPS: спец-символы можно использовать и для родителей
          
                                                        // источники которые подходят под указанный выше паттерн:
                                                        // - "roomId<<<extension<<<restriction"
                                                        // - "roomId<<<extension<<<RESTRICTION"
                                                        // - "roomId<<<extension<<<restrictions"
                                                        // - "roomId<<<extension<<<abilityRestriction"
                                                        // - "roomId<<<extension<<<abilityRestrictions"
          
                                                        // источники которые НЕ подходят под указанный выше паттерн:
                                                        // - "roomId<<<extension<<<WRONG_WORD"
                                                        // - "WRONG_PARENT<<<extension<<<restriction"
                                                        // - "roomId<<<WRONG_PARENT<<<restriction"
                                                        // - "roomId<<<extension<<<WRONG_SYMBOLS_HERE:!@#$%^&restriction"
                                                        // - "roomId<<<extension<<<restrictionTOO_MANY_SYMBOLS_HERE"

        }
      ]
    },
    //=================================================================================================================================================================================================================================================================================
    
    {
      "dst": {
                                                                      // поддержка regexp (wordRegexpEnabled) доступна только для src
        "fileName": "rooms.json",
        "word": "id<<<ROOT"
      },
      "src": [
        {
          "wordRegexpEnabled": true,                                  // включает поддержку regexp синтаксиса (c#) для более гибкой настройки маппинга
          "fileName": "*.json",
          "word": "roomId<<<extension<<<^[\\w_]*restriction[\\w_]?$"  // regexp-выражение, которое эквивалентно более простому паттерну: "roomId<<<extension<<<*restriction?", при "wordRegexpEnabled": false
                                                                      // важно не забывать про символы начала строки ^ и конца строки $.
        }
      ]
    },
    //=================================================================================================================================================================================================================================================================================

    {
      "dst": {
        "overrideFilePath": "F:/gd_data2/",             // переопределяет mappingDefaultFilePath (только для dst текущего mappingItem-а)
        "fileName": "battleClasses.json",
        "word": "type"
      },
      "src": [
        {
          "fileName": "mobSettings.json",
          "word": "battleClass"
        }
      ]
    },
    //=================================================================================================================================================================================================================================================================================

    {
      "dst": {
        "overrideFilePath": "*",                        // '*' в overrideFilePath позволяет сравнивать только имя файла, игнорируя путь
        "fileName": "battleClasses.json",
        "word": "type"
      },
      "src": [
        {
          "fileName": "mobSettings.json",
          "word": "battleClass"
        }
      ]
    },
    //=================================================================================================================================================================================================================================================================================
    
    // файл можно мапить самого на себя
    {
      "dst": {
        "fileName": "parametrizedMobs.json",
        "word": "paramKey<<<params"
      },
      "src": [
        {
          "fileName": "parametrizedMobs.json",
          "word": "defaultParamsKey"
        }
      ]
    },
    //=================================================================================================================================================================================================================================================================================

    // ссылка является массивом
    {
      "dst": {
        "fileName": "defaultEquipments.json",
        "word": "id<<<ROOT"
      },
      "src": [
        {
          "fileName": "mobSettings.json",
          "word": "defaultEquipmentIds"     // дело в том что это массив:   "defaultEquipmentIds": [303,1002],
                                            // маппинг, настроенный подобным образом тоже будет работать, но переход по ссылке будет возможен только при клике на значение (303, 1002)
        }
      ]
    },
    //=================================================================================================================================================================================================================================================================================

    // пример маппинга со множественными src
    {
      "description": "abilities",
      "dst": {
        "fileName": "abilities.json",
        "word": "id"
      },
      
      "src": [
        {
          "fileName": "*.json",
          "word": "abilityId"
        },
        {
          "fileName": "equipmentSets.json",
          "word": "id<<<abilities"
        },
        {
          "fileName": "equipmentSets.json",
          "word": "id<<<from<<<abilityMappings"
        },
        {
          "fileName": "equipmentSets.json",
          "word": "id<<<to<<<abilityMappings"
        },
        {
          "fileName": "equipmentTiers.json",
          "word": "id<<<abilityRef"
        }
      ]
    },

    //=================================================================================================================================================================================================================================================================================

    // пример маппинга с несколькими одинаковыми src, ссылающимися на разные dst и использованием поля order
    // программа попробует сначала поискать источник ссылки в mobSettings, затем в parametrizedMobs, а затем в summonSettings
    // поле order определяет порядок поиска. чем меньше значение, тем приоритетнее файл-источник
    // разумеется если источник будет найден раньше, то поиск в менее приоритетных файлах производиться не будет
    {
      "description": "mobSettings.json: mobId",
      "dst": {
        "order": 1,
        "fileName": "mobSettings.json",
        "word": "id<<<ROOT"
      },
      "src": [
        {
          "fileName": "*.json",
          "word": "mobId"
        }
      ]
    },
    {
      "description": "parametrizedMobs.json: templateId",
      "dst": {
        "order": 2,
        "fileName": "parametrizedMobs.json",
        "word": "id<<<templates"
      },
      "src": [
        {
          "fileName": "*.json",
          "word": "mobId"
        }
      ]
    },
    {
      "description": "summonSettings.json: mobId",
      "dst": {
        "order": 3,
        "fileName": "summonSettings.json",
        "word": "id<<<ROOT"
      },
      "src": [
        {
          "fileName": "*.json",
          "word": "mobId"
        }
      ]
    }
  ]
}